<div class="page-header">
  <h3>Injury #<%= @injury.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @injury.user_id %></dd>

      <dt>Diagnosis</dt>
      <dd><%= @injury.diagnosis.name %></dd>

      <dt>Injury date</dt>
      <dd><%= @injury.injury_date %></dd>

      <dt>Begin rehab on</dt>
      <dd><%= @injury.begin_rehab_on %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/injuries" class="btn btn-primary">
        Back
      </a>
      <a href="/injuries/<%= @injury.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_injury/<%= @injury.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
