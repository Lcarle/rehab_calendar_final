<div class="page-header">
  <h1>
    Injuries
    <a href="/injuries/new" class="btn btn-lg btn-success">New Injury</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Diagnosis</th>
        <th>Injury date</th>
        <th>Begin rehab on</th>
        <th>Actions</th>
      </tr>

      <% @injuries.each do |injury| %>
      <tr>
        <td><%= injury.user_id %></td>
        <td><%= injury.diagnosis_id %></td>
        <td><%= injury.injury_date %></td>
        <td><%= injury.begin_rehab_on %></td>
        <td>
          <a href="/injuries/<%= injury.id %>" class="btn btn-primary">Show</a>
          <a href="/injuries/<%= injury.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_injury/<%= injury.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
