
<div class="page-header">
  <h1>
    Routines
    <a href="/routines/new" class="btn btn-lg btn-success">New Routine</a>
  </h1>

</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Diagnosis</th>
        <th>Week</th>
      </tr>

<% @routines.each do |routine| %>

      <tr>
        <td><%= routine.diagnosis.name %></td>
        <td><%= routine.week %></td>


        <td>
          <a href="/routines/<%= routine.id %>" class="btn btn-primary">Show</a>
          <a href="/routines/<%= routine.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_routine/<%= routine.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>

    <% end %>
    </table>
  </div>
</div>
