<div class="page-header">
  <h3>Exercise #<%= @exercise.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Image</dt>
      <dd><%= @exercise.image %></dd>

      <dt>Description</dt>
      <dd><%= @exercise.description %></dd>

      <dt>Name</dt>
      <dd><%= @exercise.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/exercises" class="btn btn-primary">
        Back
      </a>
      <a href="/exercises/<%= @exercise.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_exercise/<%= @exercise.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
