<div class="page-header">
  <h1>
    Exercises
    <a href="/exercises/new" class="btn btn-lg btn-success">New Exercise</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>

      </tr>

      <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td><%= exercise.description %></td>
        <td><img src="<%= exercise.image %>" class="img-responsive" alt="Responsive image"></td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
