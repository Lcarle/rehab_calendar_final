<div class="page-header">
  <h1>
    Diagnoses
    <a href="/diagnoses/new" class="btn btn-lg btn-success">New Diagnosis</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @diagnoses.each do |diagnosis| %>
      <tr>
        <td><%= diagnosis.name %></td>
        <td>
          <a href="/diagnoses/<%= diagnosis.id %>" class="btn btn-primary">Show</a>
          <a href="/diagnoses/<%= diagnosis.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_diagnosis/<%= diagnosis.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
