<div class="page-header">
  <h3>Routine Exercise #<%= @routine_exercise.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Exercise</dt>
      <dd><%= @routine_exercise.exercise_id %></dd>

      <dt>Reps</dt>
      <dd><%= @routine_exercise.reps %></dd>

      <dt>Sets</dt>
      <dd><%= @routine_exercise.sets %></dd>

      <dt>Routine</dt>
      <dd><%= @routine_exercise.routine_id %></dd>

      <dt>Name</dt>
      <dd><%= @routine_exercise.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/routine_exercises" class="btn btn-primary">
        Back
      </a>
      <a href="/routine_exercises/<%= @routine_exercise.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_routine_exercise/<%= @routine_exercise.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
