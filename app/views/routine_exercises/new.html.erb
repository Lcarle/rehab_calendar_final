<!-- Validation failure messages -->
<% if @routine_exercise.errors.any? %>
  <% @routine_exercise.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Routine Exercise</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_routine_exercise" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for exercise_id -->
      <div class="form-group">
        <label for="exercise_id" class="control-label">
          Exercise
        </label>

        <input type="text" id="exercise_id" name="exercise_id" placeholder="Exercise" class="form-control" value="<%= @routine_exercise.exercise_id %>">
      </div>

      <!-- Label and input for reps -->
      <div class="form-group">
        <label for="reps" class="control-label">
          Reps
        </label>

        <input type="text" id="reps" name="reps" placeholder="Reps" class="form-control" value="<%= @routine_exercise.reps %>">
      </div>

      <!-- Label and input for sets -->
      <div class="form-group">
        <label for="sets" class="control-label">
          Sets
        </label>

        <input type="text" id="sets" name="sets" placeholder="Sets" class="form-control" value="<%= @routine_exercise.sets %>">
      </div>

      <!-- Label and input for routine_id -->
      <div class="form-group">
        <label for="routine_id" class="control-label">
          Routine
        </label>

        <input type="text" id="routine_id" name="routine_id" placeholder="Routine" class="form-control" value="<%= @routine_exercise.routine_id %>">
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @routine_exercise.name %>">
      </div>

      <button class="btn btn-success">
        Create Routine Exercise
      </button>
      or
      <a href="/routine_exercises">Cancel</a>
    </form>
  </div>
</div>
