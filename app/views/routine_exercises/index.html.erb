<div class="page-header">
  <h1>
    Routine Exercises
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Exercise</th>
        <th>Description</th>
        <th>Reps</th>
        <th>Sets</th>
        <th>Photo</th>

        <th>Actions</th>
      </tr>

      <% @routine_exercises.each do |routine_exercise| %>
      <tr>
        <td><%= routine_exercise.exercise.name %></td>
        <td><%= routine_exercise.exercise.description %></td>
        <td><%= routine_exercise.reps %></td>
        <td><%= routine_exercise.sets %></td>
        <td><img src="<%= routine_exercise.exercise.image %> "class="img-responsive" alt="Responsive image"></td>
        <td>
          <a href="/routine_exercises/<%= routine_exercise.id %>" class="btn btn-primary">Show</a>

        </td>
      </tr>
      <% end %>

    </table>
  </div>
</div>
